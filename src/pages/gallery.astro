---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
---

<MainLayout
	title="Gallery - Vivid Ink Tattoos | Our Work"
	description="Explore our portfolio of custom tattoo designs and artistic creations."
>
	<Header />
	<main class="py-16 lg:py-24">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-4">
					Our Gallery
				</h1>
				<p class="text-lg text-gray-600 max-w-2xl mx-auto">
					Browse through our collection of custom tattoo designs and artistic work
				</p>
			</div>
			
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
				{Array.from({ length: 12 }, (_, i) => (
					<article class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
						<picture>
							<source
								srcset={`https://images.unsplash.com/photo-${1600000000000 + i}?w=800&h=800&fit=crop&auto=format&q=80`}
								type="image/webp"
							/>
							<img
								src={`https://images.unsplash.com/photo-${1600000000000 + i}?w=800&h=800&fit=crop&auto=format&q=80`}
								alt={`Tattoo artwork ${i + 1}`}
								loading="lazy"
								decoding="async"
								class="w-full h-64 sm:h-80 object-cover group-hover:scale-105 transition-transform duration-300"
								width="800"
								height="800"
							/>
						</picture>
						<div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
							<h3 class="text-white font-semibold">Custom Tattoo Design {i + 1}</h3>
						</div>
					</article>
				))}
			</div>
		</div>
	</main>
	<Footer />
</MainLayout>

